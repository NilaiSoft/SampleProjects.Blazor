@page "/Product_Index"
<h3>Product</h3>

<div class="nav-item px-3">
    <NavLink class="nav-link" href="Product_Create">
        <span class="oi oi-plus" aria-hidden="true"></span> Create
    </NavLink>
</div>

@if (productDtos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customerDto in productDtos)
            {
                <tr>
                    <td>@customerDto.Name</td>
                    <td>@customerDto.Price</td>
                    <a class="btn btn-secondary" href="/Product_Edit/@customerDto.Id" role="button">Edit</a>
                    <button type="button" @onclick="(async() =>await Delete(customerDto.Id))" role="button">Delete</button>
                </tr>
            }
        </tbody>
    </table>
}


